generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Flashcard {
  id         String   @id @default(uuid())
  front      String
  back       String
  tags       String[]
  difficulty Int?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Group {
  id         String   @id @default(uuid())
  name       String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
